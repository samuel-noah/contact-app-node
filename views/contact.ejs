<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h2>Daftar Contact</h2>
            <a href="/contact/add" class="btn btn_primary mb-2">Tambah Data</a>
              <% if (msg.length != 0) { %>
                <div class="alert alert-success" role="alert">
                  <%= msg %> 
                </div>
            <% } %>


            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nama</th>
                    <th scope="col">NomorHP</th>
                    <th scope="col">Aksi</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (contacts.length === 0 ) { %>
                    <tr>
                      <td colspan="4">
                        <div class="alert alert-danger" role="alert">
                          Data Kontak Masih Kosong
                        </div>
                      </td>
                    </tr>
                  <% } %>
                  <% let no = 1; %> 
                  <% contacts.forEach(contact => { %>                  
                    <tr>
                    <th scope="row"> <%= no++ %>  </th>
                    <td><%= contact.nama %> </td>
                    <td><%= contact.nohp %></td>
                    <td>
                    <a href="/contact/<%= contact.nama %> " class="btn btn-success badge rounded-pill"> <i class="bi bi-info"></i>Detail</a>
                    </td>
                  </tr>
                   
                  <% }) %>

                </tbody>
              </table>
        </div>
    </div>
</div>
